{
  "rules": {
    "committees": {
      ".read": true,
    	"$uid": {
        ".read": true,
        ".write": "auth != null && 
        	(newData.child('creatorUid').val() === auth.uid
           || data.child('creatorUid').val() === auth.uid)",
        "caucuses": {
          "$cid" : {
            "queue": {
              "$qid": {
                ".write": "!data.exists() && newData.exists() && data.parent().parent().child('queueIsPublic').val() === true"
              }
            }
          }
        },
        "files": {
          ".write": true
        }
      }
    }
  }
}
